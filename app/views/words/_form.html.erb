<%= form_with(model: word, remote: true) do |form| %>
  <div class="field"> 
    <%= form.text_field :term, class: "form-control", id: "search-box", placeholder: "enter word..." %>
  </div>
  
  <div class="actions">
    <%= form.submit "search", class: "btn btn-primary btn-block", id: "search-btn" %>
  </div>
<% end %>