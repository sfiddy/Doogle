<div class="d-flex-inline justify-content-center col-6 offset-3">
  <h2 class="text-center">Forgot your password?</h2>
  
  <div class="form-group">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    
      <div class="actions text-center">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
  
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary" %>
</div>
